---
import Footer from '../components/Footer';
import '../styles/global.css';
import { ThemeProvider } from '../components/ThemeProvider';
import { Dock } from '../components/features/dock/Dock';
import { TooltipProvider } from '../components/ui/tooltip';
---

<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="zacharie, dos santos,dossantos, portfolio, dev, fullstack, developpeur" />
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://portfolio.zdossantos.fr/" />
    <title>Portfolio - Zacharie Dos Santos</title>
    <link rel="icon" type="image/png" href="/images/profile.png" />
</head>
<body class="flex flex-col min-h-screen bg-background text-foreground">
<main class="flex-1">
    <ThemeProvider client:load>
        <TooltipProvider>
            <slot />
        </TooltipProvider>
    </ThemeProvider>
</main>
<Dock client:load />
<Footer client:load />
</body>
</html>
